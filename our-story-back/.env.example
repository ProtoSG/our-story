# Database Configuration
POSTGRES_DB=ddbb_our_story
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DB_HOST=db
DB_PORT=5432

# JWT Configuration
# Generate a secure random key for production: openssl rand -base64 64
JWT_SECRET_KEY=your_secret_key_here_min_256_bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Firebase Configuration (RECOMMENDED: Use environment variables instead of file)
# Option 1: Environment Variables (Recommended)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_BUCKET_NAME=your-bucket-name.firebasestorage.app

# Option 2: File path (If you prefer using serviceAccountKey.json file)
# FIREBASE_CREDENTIALS_PATH=firebase/serviceAccountKey.json

# Server Configuration
SERVER_PORT=8080
